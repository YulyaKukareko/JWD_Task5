<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration>

    <appender name="ROOT" class="org.apache.log4j.FileAppender">

        <param name="file" value="src/main/resources/log/rootLogger.log"/>
        <param name="immediateFlush" value="true"/>
        <param name="threshold" value="debug"/>
        <param name="append" value="false"/>

        <layout class="org.apache.log4j.PatternLayout">
            <param name="conversionPattern" value="%m%n"/>
        </layout>
    </appender>

    <appender name="PARKING" class="org.apache.log4j.FileAppender">

        <param name="file" value="src/main/resources/log/parkingLogger.log"/>
        <param name="immediateFlush" value="true"/>
        <param name="threshold" value="debug"/>
        <param name="append" value="false"/>

        <layout class="org.apache.log4j.PatternLayout">
            <param name="conversionPattern" value="%m%n"/>
        </layout>
    </appender>

    <logger name="log4j.rootLogger" additivity="false">
        <level value="DEBUG"/>
        <appender-ref ref="ROOT"/>
    </logger>

    <logger name="ParkingLogger" additivity="false">
        <level value="DEBUG"/>
        <appender-ref ref="PARKING"/>
    </logger>

</log4j:configuration>